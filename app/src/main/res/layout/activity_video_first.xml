<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="cn.automooc.com.ui.VideoActivity"
    tools:ignore="ExtraText">
    
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back_img"
            android:contentDescription=""
            tools:ignore="ContentDescription" />
        
        <View
            android:layout_width="65dp"
            android:layout_height="35dp"/>
        
        <TextView
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:text=""/>
        
        <ImageView
            android:visibility="invisible"
            android:layout_width="35dp"
            android:src="@mipmap/shared_img"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35dp"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:contentDescription="" />


        <ImageView
            android:id="@+id/collect_iv"
            android:layout_width="35dp"
            android:src="@mipmap/collect_normal"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35dp"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:contentDescription="" />
    </LinearLayout>
    
    
    //视频区域
    
   
   <ImageView
       android:id="@+id/video_img"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:contentDescription=""
       tools:ignore="ContentDescription" />
        
    //视频区域
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/jianjie_bt"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="@string/introduce"/>

        <TextView
            android:id="@+id/mulu_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#BEBEBE"
            android:text="目录"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tiwen_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#BEBEBE"
            android:text="@string/_210"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/heixian_img"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/touming_img"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/touming_img"
            tools:ignore="ContentDescription" />

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:background="#E6E6E6"
        android:layout_height="10dp"/>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/video_viewpager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    
    

</LinearLayout>
