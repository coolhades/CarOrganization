<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="none">


    <!--background-->
    <LinearLayout
        android:layout_marginTop="60dp"
        android:gravity="bottom"
        android:background="@color/content"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <TextView
            android:id="@+id/go_pay"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:text="购买课程"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/course_text_choosed_bg"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/image_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="16dp"
            android:id="@+id/image_iv"
            android:src="@mipmap/shared_img"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

<LinearLayout
    android:id="@+id/content_ly"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/image_ly"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="6dp"
    android:background="@color/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/price_text"
        android:text="￥: "
        android:textColor="@color/momeyColor"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/course_title"
        android:layout_marginTop="4dp"
        android:text=""
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/chooseclass"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:layout_below="@+id/image_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="选择班级"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
<ScrollView
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_below="@+id/chooseclass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.automooc.com.widget.FlowLayout
            android:id="@+id/class_fl"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </cn.automooc.com.widget.FlowLayout>
    </LinearLayout>

</ScrollView>




</RelativeLayout>